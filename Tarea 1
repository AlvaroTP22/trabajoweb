<!DOCTYPE html>
<html>
<body>

<?php
$variable_10 = "0";
while ($variable_10 <= 9){
	echo "$variable_10,";$variable_10++;
}
echo $variable_10;
?> 

</body>
</html>

//ejercicio 4

<!DOCTYPE html>
<html>
<body>

<?php
for ($i = 1; $i <= 10; $i++) {
    echo "9 x $i = " . (9 * $i) . "<br>";
}
?>


</body>
</html>

